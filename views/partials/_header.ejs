<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link mr-3" href="/urls">My URLs</a>
        <a class="nav-item nav-link mr-3" href="/urls/new">Create New URL</a>
        <% if (username) {%>
        <button type="button" class="btn btn-sm btn-light" data-toggle="modal" data-target="#sign-out">
          <%= username %>
        </button>
        <%} else {%>
        <button type="button" class="btn btn-sm btn-light" data-toggle="modal" data-target="#sign-in">
          Sign In
        </button>
        <% } %>
      </div>
    </div>
  </nav>
  <!-- Sign In -->
  <div class="modal fade" id="sign-in" tabindex="-1" role="dialog" aria-labelledby="sign-in" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Log In</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/login" method="POST">
            <div class="form-group mb-2">
              <label for="username">Username: </label>
              <input class="form-control" type="text" name="username" placeholder="email@email.com">
              <!-- <label for="username" class="mt-2">Password: </label>
              <input class="form-control" type="password" name="password"> -->
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary mt-3">Log In</button>
                <button type="button" class="btn btn-secondary mt-3" data-dismiss="modal">Cancel</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Sign Out -->
  <div class="modal fade" id="sign-out" tabindex="-1" role="dialog" aria-labelledby="sign-out" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Hi, <%= username %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/logout" method="POST">
            <div class="form-group mb-2">
              <button type="submit" class="btn btn-primary mt-3">Log Out</button>
              <button type="button" class="btn btn-secondary mt-3" data-dismiss="modal">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</header>